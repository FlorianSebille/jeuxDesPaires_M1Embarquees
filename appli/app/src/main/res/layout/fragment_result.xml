<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Result">
    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/viewKonfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:fontFamily="sans-serif-thin"
        android:textSize="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:id="@+id/tile-line1result">

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:layout_width="130dp"
            android:layout_height="130dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:flipEnabled="true"
            app:flipDuration="200"
            app:flipType="horizontal"
            android:id="@+id/square1-flip"
            >

            <!-- Front Layout Goes Here -->
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:id="@+id/square1-text"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/white"
                android:textSize="100dp"
                android:textAlignment="center"/>

            <!-- Back Layout Goes Here -->
            <include layout="@layout/card_result_back"/>

        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:layout_width="130dp"
            android:layout_height="130dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:flipEnabled="true"
            app:flipDuration="200"
            app:flipType="horizontal"
            android:id="@+id/square2-flip"
            >

            <!-- Front Layout Goes Here -->
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@color/pink"
                android:layout_margin="2dp"
                android:id="@+id/square2-text"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/white"
                android:textSize="100dp"
                android:textAlignment="center"/>

            <!-- Back Layout Goes Here -->
            <include layout="@layout/card_result_back"/>
        </com.wajahatkarim3.easyflipview.EasyFlipView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tile-line1result"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:id="@+id/tile-line2result">

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:layout_width="130dp"
            android:layout_height="130dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:flipEnabled="true"
            app:flipDuration="200"
            app:flipType="horizontal"
            android:id="@+id/square3-flip"
            >

            <!-- Front Layout Goes Here -->
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@color/pink"
                android:layout_margin="2dp"
                android:id="@+id/square3-text"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/white"
                android:textSize="100dp"
                android:textAlignment="center"/>

            <!-- Back Layout Goes Here -->
            <include layout="@layout/card_result_back"/>

        </com.wajahatkarim3.easyflipview.EasyFlipView>

        <com.wajahatkarim3.easyflipview.EasyFlipView
            android:layout_width="130dp"
            android:layout_height="130dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:flipEnabled="true"
            app:flipDuration="200"
            app:flipType="horizontal"
            android:id="@+id/square4-flip"
            >

            <!-- Front Layout Goes Here -->
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@color/colorPrimaryDark"
                android:layout_margin="2dp"
                android:id="@+id/square4-text"
                android:fontFamily="sans-serif-regular"
                android:textColor="@color/white"
                android:textSize="100dp"
                android:textAlignment="center"/>

            <!-- Back Layout Goes Here -->
            <include layout="@layout/card_result_back"/>

        </com.wajahatkarim3.easyflipview.EasyFlipView>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc1"
        android:fontFamily="sans-serif-thin"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_below="@+id/tile-line2result"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc2"
        android:fontFamily="sans-serif-thin"
        android:textSize="18dp"
        android:textAlignment="center"
        android:layout_below="@+id/desc1"
        />

    <TextView
        android:id="@+id/newhigh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp" />


</RelativeLayout>